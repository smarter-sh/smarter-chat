{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@smarter.sh/ui-chat": ["types/index.d.ts"]
    },
    "types": ["node", "react"],
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["src", "types"]
}
